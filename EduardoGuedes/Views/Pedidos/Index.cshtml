@model IEnumerable<EduardoGuedes.Models.PedidoModel>

@{
    ViewBag.Title = "Lista de Pedidos";
}

    <h2>Lista de Pedidos</h2>

<p>
    @Html.ActionLink("Criar Pedido", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Num. Pedido
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdPedido)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Edit", new { id=item.IdPedido }) |
            @Html.ActionLink("Detalhes", "Read", new { id=item.IdPedido }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.IdPedido })
        </td>
    </tr>
}

</table>
